{% sw_extends '@Storefront/storefront/base.html.twig' %}


{% block base_content %}

    <div class="main-fast-order">
        <h1>Fast Order</h1>

        <div class="next-to-eachother change-import">
            <div class="next-to-eachother active">
                <svg width="800px" height="800px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" clip-rule="evenodd" d="M19.186 2.09c.521.25 1.136.612 1.625 1.101.49.49.852 1.104 1.1 1.625.313.654.11 1.408-.401 1.92l-7.214 7.213c-.31.31-.688.541-1.105.675l-4.222 1.353a.75.75 0 0 1-.943-.944l1.353-4.221a2.75 2.75 0 0 1 .674-1.105l7.214-7.214c.512-.512 1.266-.714 1.92-.402zm.211 2.516a3.608 3.608 0 0 0-.828-.586l-6.994 6.994a1.002 1.002 0 0 0-.178.241L9.9 14.102l2.846-1.496c.09-.047.171-.107.242-.178l6.994-6.994a3.61 3.61 0 0 0-.586-.828zM4.999 5.5A.5.5 0 0 1 5.47 5l5.53.005a1 1 0 0 0 0-2L5.5 3A2.5 2.5 0 0 0 3 5.5v12.577c0 .76.082 1.185.319 1.627.224.419.558.754.977.978.442.236.866.318 1.627.318h12.154c.76 0 1.185-.082 1.627-.318.42-.224.754-.559.978-.978.236-.442.318-.866.318-1.627V13a1 1 0 1 0-2 0v5.077c0 .459-.021.571-.082.684a.364.364 0 0 1-.157.157c-.113.06-.225.082-.684.082H5.923c-.459 0-.57-.022-.684-.082a.363.363 0 0 1-.157-.157c-.06-.113-.082-.225-.082-.684V5.5z" fill="#000000"/></svg>
                <p>Enter article</p>
            </div>
            <div class="next-to-eachother">
                <svg width="800px" height="800px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M17 9.00195C19.175 9.01406 20.3529 9.11051 21.1213 9.8789C22 10.7576 22 12.1718 22 15.0002V16.0002C22 18.8286 22 20.2429 21.1213 21.1215C20.2426 22.0002 18.8284 22.0002 16 22.0002H8C5.17157 22.0002 3.75736 22.0002 2.87868 21.1215C2 20.2429 2 18.8286 2 16.0002L2 15.0002C2 12.1718 2 10.7576 2.87868 9.87889C3.64706 9.11051 4.82497 9.01406 7 9.00195" stroke="#000" stroke-width="1.5" stroke-linecap="round"/>
                    <path d="M12 15L12 2M12 2L15 5.5M12 2L9 5.5" stroke="#000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <p>Upload (CSV)</p>
            </div>
        </div>
        
        <p>Please enter the articles and quantities you want to order. The availability of the articles is checked and displayed directly while typing. You can enter all data completely via keyboard. In the result list, you can navigate through the results with the arrow up and arrow down key. With the enter key, you can select the correct entry.</p>
        
        <form id="submit-fast-order" method="post" autocomplete="off">

            <div class="table-header next-to-eachother row-fast-order">
                <div class="div-search-articles">Article</div>
                <div class="div-enter-quantity">Quantity</div>
            </div>

            {% for i in 0..10 %}
                <div class="row-fast-order">
                    <div class="div-search-articles">
                        <input type="text" id='search-article{{ i }}' name='search-article{{ i }}' data-id-enter-quantity='enter-quantity{{ i }}' data-id-container-main-price='container-main-price{{ i }}'  class="form-control search-articles" placeholder="Search article...">
                    </div>
                    <div class="div-enter-quantity">
                        <input type="number" id='enter-quantity{{ i }}' name='enter-quantity{{ i }}' class="form-control enter-quantity" min="0" step="1" max="100" placeholder="Quantity">
                    </div>
                </div>
                <div class="row-fast-order show-price" id='container-main-price{{ i }}'>
                    <p class="small"><b>Main product</b></p>
                    <div class="main-prices">
                        <span class="symbol"></span><span class="price"></span>
                    </div>
                </div>
            {% endfor %}

            <div class="total-price next-to-eachother">
                <p class="small">Total amount:</p>
                <div id="total-price" class="price">
                    <span class="symbol"></span><span class="price"></span>
                </div>
            </div>
    
            <button id="submit-form">Add to shopping list</button>
        </form>

        <div class="search-articles-results"></div>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    <template data-janfastorder-plugin data-janfastorder-plugin-options='{{ exampleProducts|json_encode }}' data-janfastorder-plugin-currency-symbol='{{ context.currency.symbol|json_encode }}'></template>

{% endblock %}
